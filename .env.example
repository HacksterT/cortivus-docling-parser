# Cortivus Docling Parser - Configuration
# This is a stateless parsing service - no database or API keys required

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# DEFAULT CHUNKING PARAMETERS
# =============================================================================

# Target chunk size in characters (100-5000)
DEFAULT_CHUNK_SIZE=1000

# Overlap between chunks in characters (0-500)
DEFAULT_CHUNK_OVERLAP=200

# Maximum tokens per chunk (100-2000)
DEFAULT_MAX_TOKENS=512

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Host and port (typically overridden by docker-compose)
HOST=0.0.0.0
PORT=8001
